<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/websocketim_colorPrimaryDark">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/websocketim_height_top_bar"
        android:background="@color/websocketim_colorPrimary">

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:contentDescription="@null"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/socket_icom_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="充值"
            android:textColor="@color/socket_title_color_Dark"
            android:textSize="@dimen/websocketim_top_bar_title_size" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/socket_setting_item_heigth"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:background="@drawable/socket_icom_recharge_diamond"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/image1"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/websocketim_Half"
                android:text="60钻"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/websocketim_Half"
                android:text="￥6.00"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/socket_button_bg_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/socket_setting_item_heigth"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:background="@drawable/socket_icom_recharge_diamond"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/image2"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/websocketim_Half"
                android:text="100钻"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/websocketim_Half"
                android:text="￥10.00"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/socket_button_bg_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/socket_setting_item_heigth"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:background="@drawable/socket_icom_recharge_diamond"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/image3"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/websocketim_Half"
                android:text="300钻"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/websocketim_Half"
                android:text="￥30.00"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/socket_button_bg_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/socket_setting_item_heigth"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:background="@drawable/socket_icom_recharge_diamond"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/image4"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/websocketim_Half"
                android:text="500钻"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/websocketim_Half"
                android:text="￥50.00"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/socket_button_bg_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/socket_setting_item_heigth"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp">

            <ImageView
                android:id="@+id/image5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:background="@drawable/socket_icom_recharge_diamond"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/image5"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/websocketim_Half"
                android:text="1000钻"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/websocketim_Half"
                android:text="$100.00"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/socket_button_bg_gray"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/socket_button_heigth"
        android:layout_below="@+id/ll_recharge"
        android:layout_margin="50dp"
        android:gravity="center"
        android:text="充值"
        android:textSize="18sp"
        android:textColor="@color/websocketim_white"
        android:background="@drawable/bg_button_red"/>

</RelativeLayout>
